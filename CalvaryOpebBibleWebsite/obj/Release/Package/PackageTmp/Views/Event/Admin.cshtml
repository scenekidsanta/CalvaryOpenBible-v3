@model PagedList.IPagedList<CalvaryOpebBibleWebsite.Models.Event>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron" style="width:90%; margin-left:5%; ">
    <div>
    <h2 style="width:10%; float:left">Events </h2>
        <br />
        <br />
        <br />  
        <br />
        <p style="width:10%; float:left">
            @Html.ActionLink("Create New", "Create")
        </p>
    
   </div>
    @using (Html.BeginForm("Admin", "Event", FormMethod.Get))
    {
        <p style=" margin-left:60%; width:70%">
            Search Events: @Html.TextBox("SearchStrings", ViewBag.CurrentFilters as string)<input type="submit" value="Search" />
        </p>
    }
   
    <table class="table" style=' background: #fff;color: #222;border-radius: 5px;box-sizing: border-box; border-color:#222'>
        <tr>

            <th style="width:10%;">
                @Html.ActionLink("Ministry", "Index", new { sortOrders = ViewBag.MinistrySortParm, currentFilters = ViewBag.CurrentFilters })
            </th>
            <th style="width:10%;">
                Name
            </th>
            <th style="width:10%;">
                Location
            </th>

            <th style="width:15%;">
                Description
            </th>
            <th style="width:10%;">
                @Html.ActionLink("Date", "Index", new { sortOrders = ViewBag.DateSortParm, currentFilters = ViewBag.CurrentFilter })
            </th>

            <th style="width:10%;">
                Time
            </th>


            <th></th>
        </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td style="width:10%;">
                            @Html.DisplayFor(modelItem => item.EventMinistry)
                        </td>
                        <td style="width:10%;">
                            @Html.Raw(item.EventName.Replace(Environment.NewLine, "<br/>"))
                        </td>
                        <td style="width:10%;">
                            @Html.Raw(item.EventLocation.Replace(Environment.NewLine, "<br/>"))
                        </td>

                        <td style="width:15%;">
                            @Html.Raw(item.EventDescription.Replace(Environment.NewLine, "<br/>"))
                        </td>
                        <td style="width:10%;">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>

                        <td style="width:10%;">
                            @Html.DisplayFor(model => item.EventTime)
                        </td>
                        <td style="width:10%;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.EventID })
                            @Html.ActionLink("Details", "Details", new { id = item.EventID })
                            @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
                        </td>
                    </tr>
                }

    </table>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, pages => Url.Action("Admin",
    new { pages, sortOrders = ViewBag.CurrentSorts, currentFilter = ViewBag.CurrentFilters }))
</div>
            