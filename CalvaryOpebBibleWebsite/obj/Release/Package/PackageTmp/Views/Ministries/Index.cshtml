@model PagedList.IPagedList<CalvaryOpebBibleWebsite.Models.Ministries>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Ministries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="max-width:2200px;min-width:300px; overflow:auto  ">
    <h2 style="text-align:center;">Ministries</h2>
    <br />
    <br />
    <div style="text-align:center">
        <a href="~/Ministries/Adults" style="color:black;font-size:16px;">Adults</a>
        <a href="~/Ministries/Children" style="color:black;margin-left:4%;font-size:16px;">Children</a>
        <a href="~/Ministries/MiddleSchool" style="color:black;margin-left:4%;font-size:16px;">Middle School</a>
        <a href="~/Ministries/HighSchool" style="color:black;margin-left:4%;font-size:16px;">High School</a>
        <a href="~/Ministries/College" style="color:black;margin-left:4%;font-size:16px;">College</a>
        <a href="~/Ministries/CommunityGroups" style="color:black;margin-left:4%;font-size:16px;">Community Groups</a>
        <a href="~/Ministries/Seniors" style="color:black;margin-left:4%;font-size:16px;">Seniors</a>
    </div>
    <br />

    <br />

        @using (Html.BeginForm("Index", "Ministries", FormMethod.Get))
        {
            <p style="float:right; margin-right:5%">
                Search Ministries: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)<input type="submit" value="Search" />
            </p>
        }
 
            <table class="table" style='margin-top:3%; margin-left:5%; width:90%; background: #fff;color: #222;border-radius: 5px;box-sizing: border-box; border-color:#222'>



                <tr>
                    <th>
                        Ministry Leader
                    </th>
                    <th>Position</th>
                    <th>Ministry</th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                       
                            <td>
                                <a href="@Url.Action("Details","Ministries", new { id = item.MinitriesID})">  @Html.DisplayFor(modelItem => item.MinistriesLeader) </a>
</td>



                            <td>
                                @Html.DisplayFor(modelItem => item.MinistriesPosition)
                            </td>
                       
                            <td>
                                @switch (item.MinistriesType)
                                {
                                    case "Adults":
                                        @Html.ActionLink(item.MinistriesType, item.MinistriesType, "Ministries")
                                        break;
                                    case "Children":
                                    @Html.ActionLink(item.MinistriesType, item.MinistriesType, "Ministries")
                                        break;
                                    case "College":
                                    @Html.ActionLink(item.MinistriesType, item.MinistriesType, "Ministries")
                                        break;
                                    case "Community Groups":
                                    @Html.ActionLink(item.MinistriesType, "CommunityGroups", "Ministries")
                                        break;
                                    case "Middle School":
                                    @Html.ActionLink(item.MinistriesType, "MiddleSchool", "Ministries")
                                        break;
                                    case "High School":
                                    @Html.ActionLink(item.MinistriesType, "HighSchool", "Ministries")
                                        break;
                                    case "Seniors":
                                    @Html.ActionLink(item.MinistriesType, item.MinistriesType, "Ministries")
                                        break;
                                    default:
                                    @Html.ActionLink(item.MinistriesType, item.MinistriesType, "Ministries")
                                        break;
                                }
                            </td>


</tr>
                    <tr><td></td><td></td><td></td></tr>
                }

            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    <a href="~/Ministries/Index" style="color:black;margin-left:2%;font-size:18px;">Ministries Home</a>
            </div>
        
        
