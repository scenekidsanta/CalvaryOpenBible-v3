    <div class="jumbotron" style="max-width:2200px;min-width:300px; overflow:auto">

        <table class="table" style="width:25%; padding-top:5%; float:left; background: #fff;color: #222;border-radius: 5px;box-sizing: border-box; border-color:#222;position:relative;">
            <tr>
                <th>
                    Ministry Leaders:
                </th>
            </tr>
            <tr>
                <td></td>
            </tr>
            @foreach (var item in Model)
            {
                if (item.MinistriesLeader != null)
                {

                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.MinistriesLeader)
                        </th>
                    </tr>

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinistriesPosition)
                        </td>

                    </tr>
                    <tr>
                        <td></td>
                    </tr>
                }
            }
        </table>



        <div class="Events" style="width:70%; float:left;margin-left:2%">
            <table class="table" style=' background: #fff;color: #222;border-radius: 5px;box-sizing: border-box; border-color:#222;position:relative;'>
                <tr>
                    <th>
                        Weekly Events
                    </th>
                    <td></td>
                    <td></td>
                    <td></td>


                </tr>
                <tr>
                    <th>
                        Event Name
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Event Time
                    </th>
                    <th>
                        Event Description
                    </th>

                </tr>

                @foreach (var item in Model.Where(i => i.EventType == "Weekly Events"))
                {

                    <tr>

                        <td>
                            <a href="@Url.Action("Details", "Event", new { id = item.EventID })">   @Html.DisplayFor(modelItem => item.EventName)</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDescription)
                        </td>

                    </tr>

                }

            </table>
            <table class="table" style=' background: #fff;color: #222;border-radius: 5px;box-sizing: border-box; border-color:#222; align-content:center'>
                <tr>
                    <th>
                        Upcoming Events
                    </th>
                    <td></td>
                    <td></td>
                    <td></td>

                </tr>
