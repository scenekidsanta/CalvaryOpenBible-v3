		current_margin_left = -437 - showcase_index_position21173 * 518;
		//$('#output').html(current_margin_left+', '+showcase_index_position21173);
		$('#image_strip21173').animate({
	    	left: '+=518'
	    }, speed21173, function() {
	    	// Animation complete.
	    	enable_buttons21173 = true;
	    	if(!hovering21173){
	    		start_showcase_slide_animation21173();
	    	}
	    });
	}
}

function forward_showcase21173(){
	if(enable_buttons21173){
		enable_buttons21173 = false;
		if (showcase_index_position21173 == 6){
			showcase_index_position21173 = 0;
			current_margin_left = -437 - showcase_index_position21173 * 518;
			$('#image_strip21173').css('left',current_margin_left+'px');
		}
		showcase_index_position21173 = showcase_index_position21173+1;
		current_margin_left = -437 - showcase_index_position21173 * 518;
		//$('#output').html(current_margin_left+', '+showcase_index_position21173);
		$('#image_strip21173').animate({
	    	left: '-=518'
	    }, speed21173, function() {
	    	// Animation complete.
	    	speed21173 = default_speed21173;
	    	enable_buttons21173 = true;
	    	if(!hovering21173){
	    		start_showcase_slide_animation21173();
	    	}
	    });
	}
}
function start_showcase_slide_animation21173(){
	if (direction21173 == 1){
		showcase_animation_interval21173 = setTimeout("forward_showcase21173()",pause_duration21173);
	} else {
		showcase_animation_interval21173 = setTimeout("backward_showcase21173()",pause_duration21173);
	}
}
$(document).ready(function() {
		start_showcase_slide_animation21173();
	$('#showcase_back_arrow21173').click(function(){
		speed21173 = default_speed21173 / 4;
		if (typeof(showcase_animation_interval21173) != undefined){
			clearInterval(showcase_animation_interval21173);
			showcase_animation_interval21173 = undefined;
		}
		backward_showcase21173();
	})
	$('#showcase_forward_arrow21173').click(function(){
		speed21173 = default_speed21173 / 4;

		if (typeof(showcase_animation_interval21173) != undefined){
			clearInterval(showcase_animation_interval21173);
			showcase_animation_interval21173 = undefined;
		}
		forward_showcase21173();
	})
	$('#showcase_promo_holder_21173').hover( function(){
		hovering21173 = 1;
		if (typeof(showcase_animation_interval21173) != undefined){
			clearInterval(showcase_animation_interval21173);
			showcase_animation_interval21173 = undefined;
		}
		},
		function(){
			hovering21173 = 0;
			speed21173 = default_speed21173;
			start_showcase_slide_animation21173();
		}

