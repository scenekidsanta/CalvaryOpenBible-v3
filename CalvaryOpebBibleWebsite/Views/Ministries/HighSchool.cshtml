                    <th>
                        Event Name
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Event Time
                    </th>
                    <th>
                        Event Description
                    </th>
                </tr>
                @foreach (var item in Model.Where(i => i.EventType == "Upcoming Events"))
                {
                    <tr>

                        <td>
                            <a href="@Url.Action("Details", "Event", new { id = item.EventID })">   @Html.DisplayFor(modelItem => item.EventName)</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDescription)
