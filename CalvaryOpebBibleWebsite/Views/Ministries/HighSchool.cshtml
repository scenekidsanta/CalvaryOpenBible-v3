	var pause_duration21173 = 3000;
	var direction21173 = 1;
	var showcase_animation_interval21173 = undefined;
	var hovering21173 = 0;
function backward_showcase21173(){
	if (enable_buttons21173){
		enable_buttons21173 = false;
		if (showcase_index_position21173 == 0){
			showcase_index_position21173 = 6;
			current_margin_left = -437 - showcase_index_position21173 * 518;
			$('#image_strip21173').css('left',current_margin_left +'px');
