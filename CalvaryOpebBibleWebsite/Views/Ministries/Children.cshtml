@model IEnumerable<CalvaryOpebBibleWebsite.Models.MinistriesViewModel>

@{
    ViewBag.Title = "Children";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2>Ministry Leaders</h2>
    <div style="width:25%; padding-top:5%;">
      
        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        Ministry Leader:
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinistriesLeader)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinistriesPosition)
                    </td>

                </tr>
            }
        </table>
       
    </div>
    <div class="Picture">

    </div>
    <div class="Body">

    </div>
    <div class="Links">

    </div>
    <div class="Downloads">

    </div>
    <div class="Events">
        <div class="Events">
            <table class="table">
                <tr>
                    <th>
                        Weekly Events:
                    </th>
                </tr>
                @foreach (var item in Model.Where(i => i.EventType != "Weekly Events"))
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDescription)
                        </td>
                    </tr>
                }
            </table>
            <table class="table">
                <tr>
                    <th>
                        Upcoming Events:
                    </th>
                </tr>
                @foreach (var item in Model.Where(i => i.EventType != "Upcoming Events"))
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDescription)
                        </td>
                    </tr>
                }
            </table>
        </div>
</div>