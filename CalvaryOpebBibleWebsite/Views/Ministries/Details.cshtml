@model CalvaryOpebBibleWebsite.Models.Ministries

@{
    ViewBag.Title = "Ministry Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron" style="max-width:2200px;min-width:300px; overflow:auto  ">

    <div>
      
        <hr />
        <dl class="dl-horizontal" style="width:30%; float:left;">
         
            <dt>
                @Html.DisplayFor(model => model.MinistriesLeader)
            </dt>
           
                <dd>
                    <img style="max-height:300px; max-width:300px" src="@Url.Content("~/Content/Images/" + System.IO.Path.GetFileName(Model.LeaderImage))" />
                </dd>
              
        </dl>
       
        <dl style="float:left; margin-left:3%;">
            <dt>
                @Html.DisplayFor(model => model.MinistriesPosition)
            </dt>
            <dd><br /><br /></dd>

            <dt>
                @Html.DisplayFor(model => model.MinistriesType)
            </dt>
          
        </dl>           
        <dl style="width:20%; float:left;margin-left:3%;">          
            <dd>
                <img style="max-height:200px; max-width:200px" src="@Url.Content("~/Content/Images/" + System.IO.Path.GetFileName(Model.LogoPath))" />
            </dd>
            <dd><br /><br /></dd>
            <dd>
                @Html.DisplayTextFor(model => model.MinistriesDescription)

            </dd>
        </dl>
    </div>
</div>
