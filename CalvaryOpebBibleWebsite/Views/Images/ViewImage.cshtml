@model CalvaryOpebBibleWebsite.Models.Image

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <div>
        <hr />
        <dl class="dl-horizontal">
           
            <dt>@Html.DisplayFor(model => model.Title) </dt>
            <dd><br /></dd>
            <dd><br /></dd>
            <dt>@Html.DisplayFor(model => model.Category)</dt>
            <dd>
                <img style="max-height:500px; max-width:500px" src="@Url.Content("~/Content/Images/" + System.IO.Path.GetFileName(Model.ImagePath))"  />
            </dd>
            <dd><br /></dd>
            <dd>@Html.Raw(Model.Details.Replace(Environment.NewLine, "<br/>"))</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>