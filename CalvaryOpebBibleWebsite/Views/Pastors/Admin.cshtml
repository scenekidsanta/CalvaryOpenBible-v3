@model IEnumerable<CalvaryOpebBibleWebsite.Models.Pastor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2>Pastors</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
      
            
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                    @Html.DisplayFor(modelItem => item.PastorName)
                    </th>
                    <th>
                      @Html.DisplayFor(modelItem => item.Title)        
                    </th>
                </tr>
                
    <tr>
        
    </tr>
                <tr>
                    <td>
                        <img style="max-height:400px; max-width:400px" src="@Url.Content("~/Content/Images/" + System.IO.Path.GetFileName(item.PastorImagePath))" />
                    </td>
                    <td width="40%">
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.PastorID })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.PastorID })</td>
                </tr>
                
            }

        </table>
</div>